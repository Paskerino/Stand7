<Window x:Class="Stand7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stand7"
        mc:Ignorable="d"
        Title="SCADA Interface" Height="768" Width="1024"
        Background="Black"       
        ResizeMode="NoResize">
    <!-- WindowStyle="None" -->
    <!--Main Grid-->
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Top Bar -->
        <Grid  Grid.Row="0"  Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="{Binding CurrentTime}" Foreground="White" FontSize="16"/>
            <Button Grid.Column="1"  Command="{Binding ShowInputCommand}" 
                    CommandParameter="SerialNumberText" 
                    Background="Transparent" 
                    Foreground="White"
                    BorderThickness="0" 
                    MinWidth="10"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">
                    <TextBlock HorizontalAlignment="Left" Text="{local:Translate SerialNumberText}" FontSize="16"/>
                    <TextBlock HorizontalAlignment="Left" Text="{ Binding SerialNumberText}" Foreground="White" FontSize="16"/>
                </StackPanel>
            </Button>
            <Button Grid.Column="2"  Command="{Binding ShowInputCommand}" 
         CommandParameter="OperatorCode" 
         Background="Transparent" 
         Foreground="White"
         BorderThickness="0" 
         MinWidth="10"
         Margin="10,0,0,0"
         HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">
                    <TextBlock HorizontalAlignment="Left" Text="{local:Translate OperatorCodeText}" FontSize="16"/>
                    <TextBlock HorizontalAlignment="Left" Text="{ Binding OperatorCode}" Foreground="White" FontSize="16"/>
                   
                </StackPanel>
            </Button>
            <TextBlock Grid.Column="3" HorizontalAlignment="Center" Text="{ Binding StatusLineText}" Foreground="LawnGreen" FontSize="16"/>
        </Grid>
        <!--Middle Bar-->
        <Grid Grid.Row="1">
            <Viewbox Stretch="Uniform">

                <Canvas Width="2860" Height="2269" Background="Black">                    
                    <TextBlock Canvas.Left="2200" Canvas.Top="1200" 
Text="{Binding BP1Value, StringFormat='BP1 {0}'}" 
Foreground="LawnGreen" 
FontSize="54" 
FontWeight="Bold" 
TextAlignment="Center"/>
                    <TextBlock Canvas.Left="1350" Canvas.Top="1200" 
Text="{Binding BP2Value, StringFormat='BP2 {0}'}" 
Foreground="LawnGreen" 
FontSize="54" 
FontWeight="Bold" 
TextAlignment="Center"/>
                    <TextBlock Canvas.Left="1010" Canvas.Top="1200" 
Text="{Binding BP3Value, StringFormat='BP3 {0}'}" 
Foreground="LawnGreen" 
FontSize="54" 
FontWeight="Bold" 
TextAlignment="Center"/>
                    <TextBlock Canvas.Left="680" Canvas.Top="1200" 
Text="{Binding BP4Value, StringFormat='BP4 {0}'}" 
Foreground="LawnGreen" 
FontSize="54" 
FontWeight="Bold" 
TextAlignment="Center"/>
                    <TextBlock Canvas.Left="200" Canvas.Top="1200" 
Text="{Binding BP5Value, StringFormat='BP5 {0}'}" 
Foreground="LawnGreen" 
FontSize="54" 
FontWeight="Bold" 
TextAlignment="Center"/>
                    <Image Source="/Assets/stand7_clean_3.png" Stretch="Uniform" 
               Width="2860" Height="2269" />

                    <ItemsControl ItemsSource="{Binding Pipes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Line StrokeThickness="20"
                      
                      X1="{Binding X1}"
                      Y1="{Binding Y1}"
                      X2="{Binding X2}"
                      Y2="{Binding Y2}"
                      Stroke="{Binding Color}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </Canvas>

            </Viewbox>

        </Grid>
        <!--Bottom Bar-->
        <Grid Grid.Row="2" Margin="10">
            <!--Icon Button Panel -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <StackPanel.Resources>
                    <Style TargetType="Button" x:Key="IconButton">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Width" Value="40"/>
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="Margin" Value="5,0"/>
                    </Style>
                </StackPanel.Resources>

                <Button Style="{StaticResource IconButton}" Command="{Binding ShowSettingsCommand}">
                    <Image Source="/Assets/settings1.png"/>
                </Button>
                <Button Style="{StaticResource IconButton}">
                    <Image Source="/Assets/accountSettings.png"/>
                </Button>
                <Button Style="{StaticResource IconButton}">
                    <Image Source="/Assets/print.png"/>
                </Button>
            </StackPanel>
            <!-- Right Button Panel-->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#333333"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="Padding" Value="20,10"/>
                        <Setter Property="Margin" Value="5,0"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="BorderBrush" Value="#555555"/>
                    </Style>
                </StackPanel.Resources>
                <Button Content="TEST" Command="{Binding TestCommand}"/>
                <Button Content="{local:Translate StartButtonText}" Command="{Binding ShowModeSelectScreen}"/>
                <Button Content="{local:Translate StopButtonText}" Command="{Binding ExitCommand}"/>
                <Button Content="{local:Translate ExitButtonText}" Command="{Binding ExitCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>