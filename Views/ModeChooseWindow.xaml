<Window x:Class="Stand7.ModeChooseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stand7"
        mc:Ignorable="d"
        Title="ModeChooseWindow" Height="450" Width="800"
        Background="Black"       
ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <Button Content="{local:Translate FullMode}" Command="{Binding SelectModeCommand}"
                CommandParameter="{x:Static local:TestMode.FullMode}" Margin="0,10,0,0" FontSize="50" />
            <Button Content="{local:Translate FirstTest}" Command="{Binding SelectModeCommand}"
                    CommandParameter="{x:Static local:TestMode.FirstTest}" Margin="0,10,0,0" FontSize="50" />
            <Button Content="{local:Translate SecondTest}"  Command="{Binding SelectModeCommand}"
                    CommandParameter="{x:Static local:TestMode.SecondTest}" Margin="0,10,0,0" FontSize="50" />
            <Button Content="{local:Translate ThirdTest}"  Command="{Binding SelectModeCommand}"
                    CommandParameter="{x:Static local:TestMode.ThirdTest}" Margin="0,10,0,0" FontSize="50" />
            <Button Content="{local:Translate ExitButtonText}" Margin="0,10,0,0" FontSize="50" Command="{Binding ExitCommand}" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
